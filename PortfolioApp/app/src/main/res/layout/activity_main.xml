<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:src="@color/cardview_shadow_end_color"
        android:layout_height="177dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name :Ankit Chandrakant Bhosale " />

    <TextView
        android:id="@+id/textView2"
        android:layout_margin="10dp"
       android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="mobile no : 93******62" />

    <TextView
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent" android:textSize="18dp"
        android:layout_height="wrap_content"
        android:text="Skills : Android Dvelopment, Cybersequrity" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="projects: portfolio app" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnskills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Skills" />

        <Button
            android:id="@+id/btnedu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Education" />

    </LinearLayout>


</LinearLayout>